pipeline {
    agent any

    environment {
        TF_VAR_AWS_ACCESS_KEY = credentials('aws-access-key')
        TF_VAR_AWS_SECRET_KEY = credentials('aws-secret-key')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/yourusername/web-server-automation.git'
            }
        }

        stage('Provision Infrastructure') {
            steps {
                script {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Configure Web Server') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'playbook.yml',
                        inventory: 'hosts'
                    )
                }
            }
        }

        stage('Run Backup') {
            steps {
                script {
                    sh 'sh backup.sh'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
